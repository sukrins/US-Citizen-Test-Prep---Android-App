<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/usa2">

    <TextView
        android:id="@+id/civic_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="332dp"
        android:layout_marginTop="71dp"
        android:background="#c8ff000d"
        android:text="Civics Questions"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="42dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/n400_prep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/civic_questions"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="205dp"
        android:layout_marginTop="119dp"
        android:background="#c8ffffff"
        android:text="N-400 Interview Prep"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="32dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/civic_questions"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/n400_vocab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/n400_prep"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/n400_prep"
        android:layout_marginBottom="91dp"
        android:layout_marginTop="118dp"
        android:background="#c80077ff"
        android:text="Vocabulary"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="42dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
